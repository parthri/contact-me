$sql="Update student set name='".$_POST["name"]."',
username='".$_POST["username"]."',
course='".$_POST["course"]."',
phone='".$_POST["phone"]."',
address='".$_POST["address"]."',
email='".$_POST["email"]."',
pass='".$_POST["pass"]."',
repass='".$_POST["repass"]."',
where ID='".$_GET["ID"]."'";
mysqli_query($conn,$sql);
$message="Student details modified";
}
