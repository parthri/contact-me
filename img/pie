Insert.php:

<!DOCTYPE html>
<html>
<head>
<title>Insert Page page</title>
</head>
<body>
<center>
<?php
$conn = mysqli_connect("localhost", "root", "", "rnw");
if($conn === false){
die("ERROR: Could not connect. " . mysqli_connect_error());
}
$query = "CREATE TABLE IF NOT EXISTS student(ID int PRIMARY KEY
AUTO_INCREMENT, name varchar(60), username varchar(60), course varchar(10), gender
enum('male', 'female', 'other'), phone int, address varchar(255), email varchar(60), pass
varchar(60), repass varchar(60), choice varchar(255))";
mysqli_query($conn, $query);
$name = $_POST['name'];
$username = $_POST['username'];
$course = $_POST['course'];
$gender = $_POST['gender'];
$phone = (int) $_POST['phone'];
$address = $_POST['address'];
$email = $_POST['email'];
$pass = $_POST['pass'];
$repass = $_POST['repass'];
$choice = implode(", ", $_POST['choice']);
$sql = "INSERT INTO student(name, username, course, gender, phone, address, email, pass,
repass, choice) VALUES ('$name',
'$username','$course','$gender','$phone','$address',
'$email','$pass','$repass','$choice')";
if(mysqli_query($conn, $sql)){
echo "<h3>data stored in a database successfully."
. " Please browse your localhost php my admin"
. " to view the updated data</h3>";
} else{
echo "ERROR: Hush! Sorry $sql. "
. mysqli_error($conn);
}
mysqli_close($conn);
?>
</center>
</body>
</html>
Display.php:
<?php
$conn=mysqli_connect("localhost","root","","rnw");
$sql="select * from student order by ID desc";
$result=mysqli_query($conn,$sql);
?>
<table border="2">
<tr>
<a href="register.php">Add User</a></tr>

<tr>
<th>Name</th>
<th>Username</th>
<th>Course</th>
<th>Gender</th>
<th>Phone</th>
<th>Address</th>
<th>Email</th>
<th>Pass</th>
<th>Repass</th>
<th>Choice</th>
</tr>
<?php
while($row=mysqli_fetch_array($result)){
$name = $row['name'];
$username = $row["username"];
$course = $row["course"];
$gender = $row["gender"];
$phone = $row["phone"];
$address = $row["address"];
$email = $row["email"];
$pass = $row["pass"];
$repass = $row["repass"];
$choice = $row["choice"];
$ID = $row["ID"];
echo '<tr>';
echo "<td>$name</td>";
echo "<td>$username</td>";
echo "<td>$course</td>";
echo "<td>$gender</td>";
echo "<td>$phone</td>";
echo "<td>$address</td>";
echo "<td>$email</td>";
echo "<td>$pass</td>";
echo "<td>$repass</td>";
echo "<td>$choice</td>";
echo "<td><a href='edituser.php?ID=$ID'>Edit</a></td>";
echo "<td><a href='deleteuser.php?ID=$ID'>Delete</a></td>";
echo "</tr>";
}
?>
</table>
Deleteuser.php:
<?php
$conn=mysqli_connect("localhost","root","","rnw");
$sql="delete from student where ID='".$_GET["ID"]."'";
mysqli_query($conn,$sql);
header("location:display.php");
?>
